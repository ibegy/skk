
<%= simple_form_for(@ticket) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :operator %>
    <%= f.input :destination %>
    <%= f.input :amount %>
    <%= f.input :price %>
    <%= f.input :departure %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
